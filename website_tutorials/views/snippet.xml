<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="snippets" inherit_id="website.snippets" name="Snippets">
            <xpath expr="//ul[@class='nav navbar-nav nav-tabs']" position="inside">
                <li>
                    <a data-toggle="tab" href="#snippet_website">Website</a>
                </li>
            </xpath>
            <xpath expr="//div[@class='tab-content']" position="inside">
                <div class="tab-pane fade" id="snippet_website">
                    <div>
                        <div class="oe_snippet_thumbnail">
                            <img class="oe_snippet_thumbnail_img" src="/website_tutorials/static/src/img/website_icon.png"/>
                            <span class="oe_snippet_thumbnail_title primary">Website H1</span>
                        </div>
                        <section class="oe_snippet_body website_snippet">
                            <div class="container">
                                <h1 class="text-center">
                                    Hello, Snippet!
                                </h1>
                            </div>
                        </section>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
