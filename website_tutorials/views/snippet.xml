<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="snippets" inherit_id="website.snippets" name="Website Snippets">
        <xpath expr="//ul" position="inside">
            <li>
                <a class="scroll-link" href="#snippet_website">
                    <span class="fa-stack fa-lg">
                        <i class="fa fa-square fa-stack-2x fa-inverse"></i>
                        <i class="fa fa-bicycle fa-stack-1x"></i>
                    </span>
                </a>
            </li>
        </xpath>
        <xpath expr="//div[@id='o_scroll']//div[@id='snippet_structure']" position="before">
            <div class="o_panel" id="snippet_website">
                <div class="o_panel_header">
                    <span class="fa-stack">
                        <i class="fa fa-bicycle fa-stack-1x"></i>
                    </span>
                    Website
                </div>
                <div class="o_panel_body">
                    <t t-snippet="website_tutorials.s_website_snippet" t-thumbnail="/website_tutorials/static/src/img/website_icon.png"/>
                    <t t-snippet="website_tutorials.s_website_products" t-thumbnail="/website_tutorials/static/src/img/website_icon.png"/>
                </div>
            </div>
        </xpath>
    </template>

    <template id="s_website_products">
        <section class="website_products">
            <div class="container" contenteditable="false">
                <div class="row">
                    <h2 class="text-center">Last products</h2>
                </div>
                <div class="row product_container"/>
            </div>
        </section>
    </template>

    <template id="s_website_snippet">
        <section class="website_snippet">
            <div class="container">
                <h1 class="text-center">
                    Hello, Snippet!
                </h1>
            </div>
        </section>
    </template>
    <template id="snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector=".website_snippet">
                <li class="dropdown-submenu">
                    <a href="#" tabindex="-2">Border</a>
                    <ul class="dropdown-menu">
                        <li data-only="click" data-select_class="border-5">
                            <a>Border 5px</a>
                        </li>
                        <li data-only="click" data-select_class="border-10">
                            <a>Border 10px</a>
                        </li>
                        <li data-only="click" data-select_class="border-0">
                            <a>None</a>
                        </li>
                    </ul>
                </li>
            </div>
            <div data-js="snippet_handler" data-selector=".website_snippet">
                <li class="dropdown-submenu">
                    <a href="#" tabindex="-2">Rotation (deg)</a>
                    <ul class="dropdown-menu">
                        <li data-set_degree="-5">
                            <a href="#">-5 deg</a>
                        </li>
                        <li data-set_degree="5">
                            <a href="#">5 deg</a>
                        </li>
                        <li data-set_degree="0">
                            <a href="#">Reset</a>
                        </li>
                    </ul>
                </li>
            </div>
        </xpath>
    </template>
</odoo>
