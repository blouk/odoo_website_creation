<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="snippets" inherit_id="website.snippets" name="Snippets">
            <xpath expr="//ul[@class='nav navbar-nav nav-tabs']" position="inside">
                <li>
                    <a data-toggle="tab" href="#snippet_website">Website</a>
                </li>
            </xpath>
            <xpath expr="//div[@class='tab-content']" position="inside">
                <div class="tab-pane fade" id="snippet_website">
                    <div>
                        <div class="oe_snippet_thumbnail">
                            <img class="oe_snippet_thumbnail_img" src="/website_tutorials/static/src/img/website_icon.png"/>
                            <span class="oe_snippet_thumbnail_title primary">Website H1</span>
                        </div>
                        <section class="oe_snippet_body website_snippet">
                            <div class="container">
                                <h1 class="text-center">
                                    Hello, Snippet!
                                </h1>
                            </div>
                        </section>
                    </div>
                    <div>
                        <div class="oe_snippet_thumbnail">
                            <img class="oe_snippet_thumbnail_img" src="/website_tutorials/static/src/img/website_icon.png"/>
                            <span class="oe_snippet_thumbnail_title primary">Last Prod</span>
                        </div>
                        <section class="oe_snippet_body website_products">
                            <div class="container" contenteditable="false">
                                <div class="row">
                                    <h2 class="text-center">Last products</h2>
                                </div>
                                <div class="row product_container"/>
                            </div>
                        </section>
                    </div>
                </div>
            </xpath>
        </template>
        <template id="snippet_options" inherit_id="website.snippet_options">
            <xpath expr="." position="inside">
                <div data-selector=".website_snippet" data-snippet-option-id='border'>
                    <li class="dropdown-submenu">
                        <a href="#" tabindex="-2">Border</a>
                        <ul class="dropdown-menu">
                            <li data-value="border-5">
                                <a>Border 5px</a>
                            </li>
                            <li data-value="border-10">
                                <a>Border 10px</a>
                            </li>
                            <li data-value="border-0">
                                <a>None</a>
                            </li>
                        </ul>
                    </li>
                </div>

                <div data-selector=".website_snippet" data-snippet-option-id='rotation'>
                    <li class="divider"></li>
                    <li class="dropdown-submenu">
                        <a href="#" tabindex="-2">Rotation</a>
                        <ul class="dropdown-menu">

                            <li >
                                <a class="button js-minus-5" href="#">-5 deg</a>
                            </li>
                            <li >
                                <a class="js-plus-5" href="#">5 deg</a>
                            </li>
                            <li >
                                <a class="button js-reset" href="#">Reset</a>
                            </li>
                        </ul>
                    </li>
                </div>

            </xpath>
        </template>
    </data>
</openerp>
